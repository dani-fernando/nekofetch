# üå∏ Theme Sakura
BABY_PINK='\033[38;5;218m'
COTTON_CANDY='\033[38;5;219m'
PEACH_CREAM='\033[38;5;224m'
SOFT_MINT='\033[38;5;158m'
LAVENDER_DREAM='\033[38;5;183m'
POWDER_BLUE='\033[38;5;153m'
VANILLA='\033[38;5;230m'
WHITE='\033[37m'
RESET='\033[0m'

# ‚ú® Help Function
show_help() {
    echo -e "${BABY_PINK}"
    echo -e "   üå∏ Nekofetch Help Menu üå∏"
    echo -e "${PEACH_CREAM}   ‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢${RESET}"
    echo -e ""
    echo -e "${SOFT_MINT}   Description:${WHITE}"
    echo -e "${VANILLA}   A kawaii system information tool"
    echo -e "   with sakura pastel theme"
    echo -e ""
    echo -e "${SOFT_MINT}   Developer:${WHITE}"
    echo -e "${VANILLA}   Dani Fernando"
    echo -e ""
    echo -e "${SOFT_MINT}   GitHub:${WHITE}"
    echo -e "${POWDER_BLUE}   https://github.com/dani-fernando"
    echo -e ""
    echo -e "${PEACH_CREAM}   ‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢${RESET}"
    echo -e "${LAVENDER_DREAM}   Thank you for using Nekofetch! ${RESET}"
    echo -e ""
    exit 0
}

# ‚ú® Invalid Command Handler
show_invalid_command() {
    echo -e "${BABY_PINK}"
    echo -e "   ‚ö†Ô∏è  Command Not Found"
    echo -e "${PEACH_CREAM}   ‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢${RESET}"
    echo -e ""
    echo -e "${SOFT_MINT}   The command '${WHITE}$1${SOFT_MINT}' is not recognized."
    echo -e ""
    echo -e "${VANILLA}   Please use:"
    echo -e "   ${POWDER_BLUE}nekofetch${WHITE}          - Show system info"
    echo -e "   ${POWDER_BLUE}nekofetch --help${WHITE}   - Show help menu"
    echo -e "   ${POWDER_BLUE}nekofetch -h${WHITE}       - Show help menu"
    echo -e ""
    echo -e "${PEACH_CREAM}   ‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢${RESET}"
    echo -e "${LAVENDER_DREAM}   Use 'nekofetch --help' for more information ${RESET}"
    echo -e ""
    exit 1
}

# Check for help options
if [[ "$1" == "--help" || "$1" == "-h" ]]; then
    show_help
fi

# Check for invalid commands
if [[ $# -gt 0 ]]; then
    show_invalid_command "$1"
fi

# ‚ú® Random Quotes
QUOTES=(
  "Nyaa~ your system is purrfect! üå∏"
  "UwU such a cute machine~ üéÄ"
  "Don't forget to hydrate nya! üíß"
  "You're doing great today, meow~ ‚ú®"
  "So sparkly and aesthetic üí´"
  "Kawaii system detected! üêæ"
  "Everything looks so fluffy! üç•"
  "Sugar, spice and everything nice~ üßÅ"
)
QUOTE=${QUOTES[$RANDOM % ${#QUOTES[@]}]}

# üß† System Info
OS=$(source /etc/os-release 2>/dev/null && echo "$PRETTY_NAME" || echo "Unknown OS")
CPU=$(grep -m1 "model name" /proc/cpuinfo | cut -d: -f2 | sed 's/^ *//')
KERNEL=$(uname -r)
RAM=$(free -h | grep Mem: | awk '{print $3 " / " $2}')
SWAP=$(free -h | grep Swap: | awk '{if($2=="0B") print "Disabled"; else print $3 " / " $2}')
DISK=$(df -h / | awk 'NR==2 {print $3 " / " $2 " (" $5 ")"}')
SHELL_NAME=$(basename "$SHELL")
HOSTNAME=$(hostname)
GPU=$(lspci | grep -E "VGA|3D" | head -n1 | cut -d: -f3- | sed 's/^ //')

# üê± ASCII
echo -e "${BABY_PINK}‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚¢†‚†î‚†í‚†í‚†í‚†¶‚£§‚£Ä‚£Ä‚°Ä‚†Ä‚†Ä${RESET}"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚°û‚†Å‚¢Ä‚£§‚£Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†â‚†≤‚£§${RESET}"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚†Ä‚†Ä‚¢†‚°§‚†¥‚†ö‚†Å‚£∞‚£ø‚£ø‚£ø‚°Ü‚†Ä‚†Ä‚£¥‚£∂‚£∂‚†Ñ‚†Ä‚¢ª        ${COTTON_CANDY}Nekofetch - The Cutest System Info Tool"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚†Ä‚°º‚†Å‚†Ä‚†Ä‚†Ä‚†Ä‚†ª‚£ø‚£ø‚£ø‚†É‚†Ä‚£º‚£ø‚£ø‚£ø‚†Ä‚†Ä‚†Ä‚¢∑‚°Ä${RESET}"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚£º‚†Å‚†Ä‚£§‚£∂‚°Ñ‚†Ä‚†Ä‚†à‚†â‚†Å‚†Ä‚†Ä‚†à‚†õ‚†ä‚†Å‚†Ä‚†Ä‚†Ä‚†Ä‚†ô‚¢¶${SOFT_MINT}     Hostname ${WHITE}: ${VANILLA}$HOSTNAME"
echo -e "${BABY_PINK}‚†Ä‚¢†‚°á‚†Ä‚¢∏‚£ø‚£ø‚°ø‚°Ü‚†Ä‚†Ä‚£¥‚£∂‚£∂‚£¥‚£∂‚£Ñ‚†Ä‚†Ä‚¢†‚£∂‚£ø‚£¶‚†Ä‚°Ñ${SOFT_MINT}     OS       ${WHITE}: ${VANILLA}$OS" 
echo -e "${BABY_PINK}‚†Ä‚¢∏‚°á‚†Ä‚†Ä‚†õ‚†ô‚†â‚†Ä‚£∞‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚°á‚†Ä‚£ø‚£ø‚£ø‚£ø‚†Ä‚°á${SOFT_MINT}     CPU      ${WHITE}: ${VANILLA}$CPU"
echo -e "${BABY_PINK}‚†Ä‚†à‚£á‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚£∞‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚£∑‚£ø‚£∑‚°Ä‚†Ä‚†â‚†â‚†Ä‚†Ä‚°ü${SOFT_MINT}     GPU      ${WHITE}: ${VANILLA}${GPU:-Unknown}"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚£ø‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚£ø‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚°ª‚†Å${SOFT_MINT}    Kernel   ${WHITE}: ${VANILLA}$KERNEL"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚£ø‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†à‚†õ‚†â‚†Å‚†â‚†Å‚†ô‚†ª‚†ø‚†ü‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚£æ‚†Å${SOFT_MINT}     RAM      ${WHITE}: ${VANILLA}$RAM"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚¢∏‚°Ü‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚°ü‚†Å${SOFT_MINT}     Swap     ${WHITE}: ${VANILLA}$SWAP"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚†Ä‚£ª‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚¢∏‚†Å${SOFT_MINT}      Disk     ${WHITE}: ${VANILLA}$DISK"
echo -e "${BABY_PINK}‚†Ä‚†Ä‚†Ä‚£ª‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚†Ä‚¢∏‚†Å${SOFT_MINT}      Shell    ${WHITE}: ${VANILLA}$SHELL_NAME${RESET}"

# üí¨ Quotes
echo -e "\n${LAVENDER_DREAM} üéÄ ${POWDER_BLUE}${QUOTE}${RESET}\n"
